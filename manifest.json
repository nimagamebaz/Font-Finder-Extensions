{
  "manifest_version": 3,
  "name": "Font Finder",
  "version": "1.0",
  "description": "Find and display fonts used in the current website. (Iran Turks - Save Urmia Lake)",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cinox-font-finder.png",
      "48": "icons/cinox-font-finder.png",
      "128": "icons/cinox-font-finder.png"
    }
  },
  "icons": {
    "16": "icons/cinox-font-finder.png",
    "48": "icons/cinox-font-finder.png",
    "128": "icons/cinox-font-finder.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
